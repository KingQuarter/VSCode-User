{
    //= ========================================================================
    //= Built-in
    //= ========================================================================

    "security.workspace.trust.untrustedFiles": "open",
    "files.exclude": {
        "**/.git": false,
        "**/.git**": true,
        "**/*.bak": true,
        "**/*.exe": true,
        "**/*.jpg": true,
        "**/*.png": true
    },
    "launch": {
        "configurations": [],
        "compounds": []
    },

    "[markdown]": {
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        }
    },

    "files.associations": {
        "*.json": "json"
    },

    //== =======================================================================
    //== Color Customization
    //== =======================================================================

    //=== ======================================================================
    //=== Editor Token
    //=== ======================================================================

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "constant.language.ahk2",
                    "keyword.control.ahk2",
                    "keyword.control.directive.ahk2",
                    "storage.modifier.ahk2",
                    "storage.type.class.ahk2",
                    "storage.type.function.ahk2",
                    "variable.language.ahk2",
                    "variable.language.this.ahk2",
                    "variable.language.thishotkey.ahk2",
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "entity.name.type.class",
                    "keyword.keys.ahk2",
                    "keyword.operator.ahk2",
                    "keyword.operator.expression.ahk2",
                    "markup.underline",
                    "support.function.ahk2",
                ],
                "settings": {
                    "fontStyle": ""
                }
            },
        ],
        "[Monokai Pro*]":
        {
            "textMateRules": [
                {
                    "scope": [
                        "storage.type.class.ahk2"
                    ],
                    "settings": {
                        "foreground": "#FF6188"
                    }
                },
            ]
        }
    },
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
    },

    //=== ======================================================================
    //=== Workbench
    //=== ======================================================================

    "workbench.colorCustomizations": {
        "[Monokai Pro*]": {
            "editorBracketHighlight.foreground1": "#86b7fc",
            "editorBracketHighlight.foreground2": "#ab9df2",
            "editorBracketHighlight.foreground3": "#78dce8",
            "editorBracketHighlight.foreground4": "#86b7fc",
            "editorBracketHighlight.foreground5": "#ab9df2",
            "editorBracketHighlight.foreground6": "#78dce8",
        }
    },

    //== =======================================================================
    //== PowerShell
    //== =======================================================================

    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-ExecutionPolicy", "Bypass"]
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    //== =======================================================================
    //== Rulers
    //== =======================================================================

    // Color the rulers the same color as the highlighted line.
    "editor.rulers": [
    // For YouTube captions.
    // {
    //     "column": 32,
    //     "color": "#383539"
    // },
    {
        "column": 80,
        "color": "#383539"
    },
    {
        "column": 84,
        "color": "#383539"
    },
    {
        "column": 88,
        "color": "#383539"
    },
    {
        "column": 92,
        "color": "#383539"
    },
    {
        "column": 96,
        "color": "#383539"
    },
    {
        "column": 100,
        "color": "#383539"
    },
    {
        "column": 120,
        "color": "#383539"
    },
    ],

    //=== ======================================================================
    //=== Git Commit Message
    //=== ======================================================================

    "[git-commit]": {
        // Color the rulers the same color as the highlighted line.
        "editor.rulers": [
            {
                "column": 50,
                "color": "#383539"
            },
            {
                "column": 72,
                "color": "#383539"
            },
        ]
    },

    //= ========================================================================
    //= Extensions
    //= ========================================================================

    //== =======================================================================
    //== Better Comments
    //== =======================================================================

    "better-comments.tags": [
        {
            "tag": "! ",
            "color": "#ff6188",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "? ",
            "color": "#ffd866",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "note: ",
            "color": "#ffd866",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo: ",
            "color": "#fc9867",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "// ",
            "color": "#727072",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "~ ",
            "color": "#727072",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "* ",
            "color": "#a9dc76",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "= ",
            "color": "#86b7fc",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "== ",
            "color": "#ab9df2",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "=== ",
            "color": "#78dce8",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
    ],

    //== =======================================================================
    //== Comment Box
    //== =======================================================================

    "commentBox.styles": {
        "defaultStyle": {
            "capitalize": false,
            "textAlignment": "center",
            "boxWidth": 80,

            "commentStartToken": "/*= ",
            "topEdgeToken": "=",
            "topRightToken": " =*/",

            "leftEdgeToken": "/*= ",
            "rightEdgeToken": " =*/",

            "bottomLeftToken": "/*= ",
            "bottomEdgeToken": "=",
            "commentEndToken": " =*/",
        }
    },

    //== =======================================================================
    //== Grammarly
    //== =======================================================================

    "grammarly.startTextCheckInPausedState": true,
    "grammarly.files.exclude": [
        "**/extensions.txt"
    ],
    "grammarly.files.include": [
        "**/readme.md",
        "**/README.md",
        "**/*.txt",
        "**/*.ahk",
        "**/.git/COMMIT_EDITMSG"
    ],

    //== =======================================================================
    //== GitLens
    //== =======================================================================

    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "history": false,
            "remote": false
        },
        "editorGroup": false,
        "editorTab": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scm": {
            "authors": true
        },
        "scmGroupInline": {
            "stash": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": false,
            "stash": true
        }
    },
    "gitlens.codeLens.scopes": [
        "document"
    ],

    //== =======================================================================
    //== Multi Command
    //== =======================================================================

    //= ========================================================================
    //= Single-line Settings
    //= ========================================================================

    "auto-comment-blocks.singleLineBlockOnEnter": true,
    "AutoHotkey2.ActionWhenV1IsDetected": "SwitchToV1",
    "AutoHotkey2.CompleteFunctionParens": true,
    "AutoHotkey2.InterpreterPath": "C:\\Program Files\\Autohotkey\\v2\\AutoHotkey64_UIA.exe",
    "codemap.json": "C:\\Users\\zachpoblete\\AppData\\Roaming\\Code\\User\\codemap.user\\mapper_json.js",
    "codemap.location": "explorer",
    "csv-preview.resizeColumns": "all",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.cursorSurroundingLines": 10,
    "editor.fontFamily": "Osaka Mono Regular",
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": false,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 2,
    "editor.minimap.showSlider": "always",
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "none",
    "editor.wrappingIndent": "indent",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "git.allowForcePush": true,
    "git.confirmSync": false,
    "gitHistory.showEditorTitleMenuBarIcons": false,
    "gitlens.codeLens.authors.enabled": false,
    "outline.showProperties": false,
    "outline.showVariables": false,
    "scm.inputFontFamily": "editor",
    "terminal.integrated.fontFamily": "MesloLGM NF",
    "workbench.colorTheme": "Monokai Pro",
    "workbench.editor.showTabs": "single",
    "workbench.editor.wrapTabs": true,
    "workbench.iconTheme": "material-icon-theme",
}
